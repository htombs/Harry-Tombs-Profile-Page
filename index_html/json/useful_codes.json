// this is the "function" used to bring up info from a json file when a button is pressed

function getHirePrices() {
    var list = document.getElementById ("hirepricelist");

    fetch("SadPad.json").then(res => res.json())
    .then(data => {
        bikes = data["bikehirepricelist"];
        console.log(bikes);
        bikes.forEach((bike) => {
            var listItem = document.createElement("li")
            listItem.innerText = `EQUIPMENT: ${bike.name}, DURATION: ${bike.duration}, PRICE: ${bike.price}`;
            list.appendChild(listItem)
        })
        canoes = data["canoehirepricelist"];
        console.log(canoes);
        canoes.forEach((canoe) => {
            var listItem = document.createElement("li")
            listItem.innerText = canoe.name;
            list.appendChild(listItem)
        })
    })
}

function getBikeBrands() {
    var list = document.getElementById ("bikebrands");

    fetch("bike_brands.json").then(res =>res.json())
    .then(data => {
        shopbrands = data["bikebrands"];
        console.log(shopbrands);
        shopbrands.forEach((bikebrand) => {
            var listItem = document.createElement("li")
            listItem.innerText = bikebrand.name;
            list.appendChild(listItem);
        })
    })
}

function getWorkshopPrices() {
    var list = document.getElementById ("workshopprices");

    fetch("Workshop-prices.json").then(res =>res.json())
    .then(data => {
        workshops = data["workshopprices"];
        console.log(workshops);
        workshops.forEach((workshop) => {
            var listItem = document.createElement("li")
            listItem.innerText = `Labour Time: ${workshop.time}, Price: ${workshop.price}, Booking Required?: ${workshop.booking}`;
            list.appendChild(listItem);
        })
    })
}

